<!-- res/values/styles.xml -->
<resources>

    <!-- Light Theme -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize light theme (e.g., light colors) -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <!-- You can add more customization for light theme here -->
    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize dark theme (e.g., dark colors) -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <!-- You can add more customization for dark theme here -->
    </style>

</resources>
